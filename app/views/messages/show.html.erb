<br>
<%if @response == 1%>
<i><p><b><%=@message.response1%></p></i></b>
<%elsif @response == 2%>
<i><p><b><%=@message.response2%></p></b></i>
<%else%>
<%end%>



<ul class="thumbnails">
  <li class="span12">
    <div class="thumbnail" align="middle">
      <%=image_tag @message.image.s3_image_loc_url.to_s %>

      <h4><%="#{@message.question}"%></h4>
      <p>

					<a href=<%=message_path(@message, response: 1)%>><%=@message.button1%></a>&nbsp&nbsp | &nbsp&nbsp 
					<a href=<%=message_path(@message, response: 2)%>><%=@message.button2%></a>
      </p>
    </div>
  </li>
</ul>

<br>
<% if @message.status != "sent"%>
<br>
<a href="sms:?body=question <%=@message.question%> <%=@message.question + " Find Out: " + message_url(@message)%>">Sendy as Text</a> |
<a href="sms:?body=question">Sendy NORuby</a> |
<a href="mailto:?subject=<%=@message.question%>&body=Find Out: <%=message_url(@message)%>">Sendy as Email</a> |


<%=link_to "Send Message",  message_path(@message, send_status: "send"), method: :put%> |
<%=link_to "Send as Text",  message_path(@message, send_status: "send"), method: :put%> |
<%=link_to "Edit Message",  edit_message_path(@message)%> 
<%end%>
<br>
<%if @response != 0 && @message.status == "sent"%>
	<%=link_to "Forward",  new_message_path(origin_id: @message.id, type: "existing")%> |
	<%=link_to "Create New",  new_image_path(origin_id: @message.id, type: "new")%> 
	
	<%end%>