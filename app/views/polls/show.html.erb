


<ul class="thumbnails">
  <li class="span12">
    <div class="thumbnail" align="middle">
      <h3 id="1" >JiffyPoll of the Day</h3>
      <%if @poll.image%>
        <%=image_tag @poll.image.s3_image_loc_url.to_s, id: "2" %>
      <%else%>
      <%=image_tag "/the_bomb.png", id: "2"%>
      <%end%>

      <h4><%="#{@poll.question}"%></h4>

      <%if @response == 0%>
        <div style= "line-height: 2.3" >		
          <a class="btn btn-small btn-success" href=<%=poll_path(@poll, response: 1, anchor: "2")%>><%=@poll.button1%></a>
  				<a class="btn btn-small btn-danger"  href=<%=poll_path(@poll, response: 2, anchor: "2")%>><%=@poll.button2%></a>
        </div>
      <%elsif @response == 1%>
        <div style= "line-height: 2.3" >    
          <a class="btn btn-small disabled" href=<%=poll_path(@poll, response: 1, anchor: "2")%>><%=@poll.button1%></a>
          <a class="btn btn-small btn-danger"  href=<%=poll_path(@poll, response: 2, anchor: "2")%>><%=@poll.button2%></a>
        </div>
      <%elsif @response == 2%>
        <div style= "line-height: 2.3" >    
          <a class="btn btn-small btn-success" href=<%=poll_path(@poll, response: 1, anchor: "2")%>><%=@poll.button1%></a>
          <a class="btn btn-small disabled"  href=<%=poll_path(@poll, response: 2, anchor: "2")%>><%=@poll.button2%></a>
        </div>
      <%end%>

      <p><b><i>
        <%if @response == 1%>
          <%=@poll.response1%>
        <%elsif @response == 2%>
          <%=@poll.response2%>
        <%end%>
      </p></b></i>

    </div>
  </li>
</ul>


<% if @poll.user.is_admin? && @poll.status == "sent"%>

  <div>
    <div class="fb-like" data-href="www.jiffypoll.com/polls/<%=@poll.identifier%>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>

    <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
