


<ul class="thumbnails">
  <li class="span12">
    <div class="thumbnail" align="middle">
      <h3 id="qod" >JiffyPoll of the Day</h3>
      <%if @poll.image%>
        <%=image_tag @poll.image.s3_image_loc_url.to_s, id: "res_loc" %>
      <%else%>
      <%=image_tag "/the_bomb.png", id: "res_loc"%>
      <%end%>

      <h4><%="#{@poll.question}"%></h4>
      
			<div style= "line-height: 2.3" >		
        <a class="btn btn-small btn-success" href=<%=poll_path(@poll, response: 1, anchor: "res_loc")%>><%=@poll.button1%></a>
				<a class="btn btn-small btn-danger"  href=<%=poll_path(@poll, response: 2, anchor: "res_loc")%>><%=@poll.button2%></a>
      </div>
      <p><b><i>
        <%if @response == 1%>
          <%=@poll.response1%>
        <%elsif @response == 2%>
          <%=@poll.response2%>
        <%end%>
      </p></b></i>

    </div>
  </li>
</ul>


<% if @poll.user.is_admin? && @poll.status == "sent"%>

  <div class="fb-like" data-href="www.jiffypoll.com/polls/<%=@poll.identifier%>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
<%end%>

<br><br>

<br><br><br>

<% if @poll.status != "sent"%>

  <button type="button" class="btn btn-mini btn-info" data-toggle="collapse" data-target="#demo">?</button>
  <div id="demo" class="collapse out">
    <small>
      Send it or Edit it?<br>
      <ul>
        <li>This is the view your friends will see once you send it to them.</li>
        <li>Press the buttons... do they work as intended?</li>
        <li>Is this pure comic gold?.... or are you leaving a little bit on the table? </li>        
        <li>Edit it more or send it... your call.</li>
      <ul>
    </small>
    <hr />
  </div><br>


<%=link_to "Save & Send",  send_options_path(poll_id: @poll.id)%> &nbsp;&nbsp;|&nbsp;&nbsp;
  
<%=link_to "Edit",  edit_poll_path(@poll, anchor: "qod")%> 
<%end%>
<%if (@response != 0 && @poll.status == "sent") || (current_user && @poll.status == "sent") %>

<button type="button" class="btn btn-mini btn-info" data-toggle="collapse" data-target="#demo">?</button>
  <div id="demo" class="collapse out">
    <small>
      You've just receive a JiffyPoll Question of the Day.  What do you want to do?<br>
      <ul>
        <li>Go back to work and later curse your friend for wasting your time.</li>
        <li>Forward it to others?... press the Forward Button.</li>      
        <li>Create a New One from scratch?... you guessed it...  Press Create New.</li>
      <ul>
    </small>
    <hr />
  </div><br>

  <%if @poll.user == current_user%>
    <% forwardroute = send_options_path(poll_id: @poll.id)%>
  <%else%>
    <% forwardroute = new_poll_path(origin_id: @poll.id, forward: true, anchor: "qod")%>
  <%end%>

	<%=link_to "Forward", forwardroute%> |
  <%=link_to "Create Your Own",  new_image_path%> 
	
	<%end%>
  


  

